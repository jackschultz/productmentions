<h3>Threads</h3>
<% if @comments.any? %>
  <% @comments.each do |comment| %>
  <div>
    <%= render 'searches/comment', comment: comment %>
  </div>
</br>
<% end %>

</br>
<% if params[:group] == 'comments' %>
  <%= will_paginate @comments, :renderer => WillPaginate::ActionView::BootstrapLinkRenderer %>
<% else %>
  <%= link_to 'View all relevant threads', search_path(group: 'comments', term: params[:term]) %>
<% end %>

<% else %>
  <i>No threads found!</i>
<% end %>
</br>
